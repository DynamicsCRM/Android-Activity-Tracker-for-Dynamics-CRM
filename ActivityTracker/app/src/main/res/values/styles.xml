<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/theme_blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextTheme</item>
    </style>

    <style name="ActionBarTitleTextTheme" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogProgressTheme" parent="android:Widget.DeviceDefault.ProgressBar">
    </style>
</resources>
